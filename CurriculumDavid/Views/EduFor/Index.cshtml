@model IEnumerable<CurriculumDavid.Models.EduFor>

@{
    ViewData["Title"] = "Index";
}

<h1>Educação e Formação</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Novo registo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeFormacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntFormadora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFormacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntFormadora)
            </td>
            <td>
                <a class="btn-outline-info" asp-action="Details" asp-route-id="@item.EduForId">Detalhes</a> |
                <a class="btn-outline-danger" asp-action="Delete" asp-route-id="@item.EduForId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>

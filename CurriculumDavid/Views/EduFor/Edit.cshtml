@model CurriculumDavid.Models.EduFor

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Educação e Formação</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EduForId" />
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeFormacao" class="control-label"></label>
                <input asp-for="NomeFormacao" class="form-control" />
                <span asp-validation-for="NomeFormacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntFormadora" class="control-label"></label>
                <input asp-for="EntFormadora" class="form-control" />
                <span asp-validation-for="EntFormadora" class="text-danger"></span>
            </div>
       <div class="form-group">
                <label asp-for="DadosPessoaisId" class="control-label"></label>
                <select asp-for="DadosPessoaisId" class="form-control" asp-items="ViewBag.DadosPessoaisId"></select>
                <span asp-validation-for="DadosPessoaisId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" /> |
                <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

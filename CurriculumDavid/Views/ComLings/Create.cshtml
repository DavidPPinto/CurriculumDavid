@model CurriculumDavid.Models.ComLing

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Competências Linguísticaa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lingua" class="control-label"></label>
                <input asp-for="Lingua" class="form-control" />
                <span asp-validation-for="Lingua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompreensaoOral" class="control-label"></label>
                <input asp-for="CompreensaoOral" class="form-control" />
                <span asp-validation-for="CompreensaoOral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Leitura" class="control-label"></label>
                <input asp-for="Leitura" class="form-control" />
                <span asp-validation-for="Leitura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProducaoOral" class="control-label"></label>
                <input asp-for="ProducaoOral" class="form-control" />
                <span asp-validation-for="ProducaoOral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InteracaoOral" class="control-label"></label>
                <input asp-for="InteracaoOral" class="form-control" />
                <span asp-validation-for="InteracaoOral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Escrita" class="control-label"></label>
                <input asp-for="Escrita" class="form-control" />
                <span asp-validation-for="Escrita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" /> |
                <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
